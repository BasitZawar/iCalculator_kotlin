<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/resultPad_portrait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.cyber.tarzan.calculator.ui.view.CalculatorEditText
            android:id="@+id/expression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cursorVisible="false"
            android:fontFamily="@font/lato"
            android:gravity="center|end"
            android:includeFontPadding="false"
            android:inputType="textNoSuggestions"
            android:paddingEnd="@dimen/space_xl"
            android:paddingBottom="@dimen/space_xxxl"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            custom:maxTextSize="63sp"
            custom:minTextSize="50sp"
            tools:text="200+50058" />

        <com.cyber.tarzan.calculator.ui.view.CalculatorEditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cursorVisible="false"
            android:fontFamily="@font/lato"
            android:gravity="bottom|end"
            android:includeFontPadding="false"
            android:inputType="textNoSuggestions"
            android:paddingEnd="@dimen/space_xl"
            android:paddingBottom="@dimen/space_xl"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline3"
            android:textColor="?attr/textDisable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expression"
            custom:maxTextSize="50dp"
            custom:minTextSize="36sp"
            tools:text="700" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>