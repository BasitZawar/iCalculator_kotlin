<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:id="@+id/lay_calIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_sci_calcul"
            android:text="Back"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@id/result"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/result" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <com.cyber.tarzan.calculator.ui.view.CalculatorEditText
            android:id="@+id/expression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cursorVisible="false"
            android:fontFamily="@font/lato"
            android:gravity="center|end"
            android:includeFontPadding="false"
            android:inputType="textNoSuggestions"
            android:paddingEnd="@dimen/space_xl"
            android:paddingBottom="@dimen/space_xl"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline4"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            custom:maxTextSize="36sp"
            custom:minTextSize="25sp"
            tools:text="200+50058" />

        <com.cyber.tarzan.calculator.ui.view.CalculatorEditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cursorVisible="false"
            android:fontFamily="@font/lato"
            android:gravity="bottom|end"
            android:includeFontPadding="false"
            android:inputType="textNoSuggestions"
            android:paddingEnd="@dimen/space_xl"
            android:paddingBottom="@dimen/space_l"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline5"
            android:textColor="?attr/textDisable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toBottomOf="@+id/expression"
            custom:maxTextSize="25sp"
            custom:minTextSize="21sp"
            tools:text="700" />
    </LinearLayout>


</LinearLayout>