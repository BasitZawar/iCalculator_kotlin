<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".ui.main.MainActivity">
    //result pad

    <LinearLayout
        android:id="@+id/resultPad"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/lay_calIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_sci_calcul"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resultPad_land"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cyber.tarzan.calculator.ui.view.CalculatorEditText
                android:id="@+id/expression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:cursorVisible="false"
                android:fontFamily="@font/lato"
                android:gravity="center|end"
                android:includeFontPadding="false"
                android:inputType="textNoSuggestions"
                android:paddingEnd="@dimen/space_xl"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline4"
                android:textColor="@color/white"
                custom:maxTextSize="36sp"
                custom:minTextSize="25sp"
                tools:text="200+50058" />

            <com.cyber.tarzan.calculator.ui.view.CalculatorEditText
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:cursorVisible="false"
                android:fontFamily="@font/lato"
                android:gravity="bottom|end"
                android:includeFontPadding="false"
                android:inputType="textNoSuggestions"
                android:paddingEnd="@dimen/space_xl"
                android:paddingBottom="@dimen/space_l"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline5"
                android:textColor="?attr/textDisable"
                custom:maxTextSize="25sp"
                custom:minTextSize="21sp"
                tools:text="700" />
        </LinearLayout>
    </LinearLayout>
    //

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:weightSum="8">
        //column 1

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/percent"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/other_buttons"
                android:text="%"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="sin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exponential"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="e"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/squareRoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="\u221A"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null" />

        </LinearLayout>
        //column 2

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/factorial"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/other_buttons"
                android:text="!"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="cos"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tan"
                app:layout_constraintStart_toEndOf="@+id/sin"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="log"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/naturalLog"
                app:layout_constraintStart_toEndOf="@+id/exponential"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cubeRoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="\u221b"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/power"
                app:layout_constraintStart_toEndOf="@+id/squareRoot"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>
        //column 3

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/AC"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/other_buttons"
                android:text="AC"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toStartOf="@id/percent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="tan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/openBracket"
                app:layout_constraintStart_toEndOf="@+id/cos"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/naturalLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="ln"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/closeBracket"
                app:layout_constraintStart_toEndOf="@+id/log"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="^"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/pi"
                app:layout_constraintStart_toEndOf="@+id/cubeRoot"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        //column 4

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_landscape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/other_buttons"
                android:text="C"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/openBracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="("
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/four"
                app:layout_constraintStart_toEndOf="@+id/tan"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeBracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text=")"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/one"
                app:layout_constraintStart_toEndOf="@+id/naturalLog"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="\u03C0"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/zero"
                app:layout_constraintStart_toEndOf="@+id/power"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        //Column 5

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/seven"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="7"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toStartOf="@id/eight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/four"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="4"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/five"
                app:layout_constraintStart_toEndOf="@+id/openBracket"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/one"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="1"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/two"
                app:layout_constraintStart_toEndOf="@+id/closeBracket"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="0"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/decimal"
                app:layout_constraintStart_toEndOf="@+id/pi"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        // column 6

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eight"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="8"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toStartOf="@id/nine"
                app:layout_constraintStart_toEndOf="@id/seven"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/five"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="5"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/six"
                app:layout_constraintStart_toEndOf="@id/four"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/two"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="2"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/three"
                app:layout_constraintStart_toEndOf="@id/one"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="."
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/equal"
                app:layout_constraintStart_toEndOf="@+id/zero"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        //column 7

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nine"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="9"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toStartOf="@id/multiply"
                app:layout_constraintStart_toEndOf="@id/eight"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/six"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="6"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/multiply"
                app:layout_constraintStart_toEndOf="@id/five"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/three"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:text="3"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                tools:ignore="HardcodedText" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/digit_button_shape"
                android:gravity="center"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30dp"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/plus"
                app:layout_constraintStart_toEndOf="@+id/decimal"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        //column 8

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/divide"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_arith_bg"
                android:text="\u00F7"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline5"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/factorial"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_arith_bg"
                android:text="\u00D7"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline5"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/six"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minus"
                style="@style/Widget.CalculatorPlus.NumPad.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_arith_bg"
                android:stateListAnimator="@null"
                android:text="\u2212"
                android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline5"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/three"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@drawable/ic_arith_bg"
                android:text="+"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/equal"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>