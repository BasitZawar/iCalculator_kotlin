<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/linear_settingDialog"
        android:layout_width="250dp"
        android:layout_height="270dp"
        android:background="@drawable/settingdialog_shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_settings"
                android:layout_width="33dp"
                android:layout_height="34dp"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:src="@drawable/setting_icon" />

            <TextView
                android:id="@+id/tv_More"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="More Settings"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_label_no"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="-20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_more">

            <ImageView
                android:id="@+id/img_rateApp"
                android:layout_width="33dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:src="@drawable/rateapp" />

            <TextView
                android:id="@+id/tv_RateApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:gravity="left"

                android:text="Rate App"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_label_no"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="-20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_rate">

            <ImageView
                android:id="@+id/img_shareApp"
                android:layout_width="33dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:src="@drawable/shareapp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ShareApp"
                app:layout_constraintEnd_toStartOf="@+id/tv_ShareApp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_ShareApp" />

            <TextView
                android:id="@+id/tv_ShareApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="Share App"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_label_no"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="-20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_share">

            <ImageView
                android:id="@+id/img_feedBack"
                android:layout_width="33dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:src="@drawable/ic_feedback" />

            <TextView
                android:id="@+id/tv_feedBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="Feedback"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="-20dp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>